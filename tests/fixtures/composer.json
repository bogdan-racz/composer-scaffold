{
  "name": "my/project",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": {
    "composer-scaffold": {
      "type": "path",
      "url": "../composer-scaffold",
      "options": {
        "symlink": true
      }
    },
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  },
  "require": {
    "grasmash/composer-scaffold": "*",
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6.5",
    "drupal/core": "^8.8.x-dev",
    "pantheon-fixtures/d8-scaffold-files": "^1"
  },
  "extra": {
    "composer-scaffold": {
      "allowed-packages": [
        "drupal/core",
        "pantheon-fixtures/d8-scaffold-files"
      ],
      "locations": {
        "web-root": "./docroot"
      },
      "symlink": true,
      "file-mapping": {
        "drupal/core": {
          "assets/.htaccess": false,
          "assets/robots.txt": "[web-root]/robots-default.txt"
        }
      }
    },
    "installer-paths": {
      "docroot/core": ["type:drupal-core"],
      "docroot/modules/contrib/{$name}": ["type:drupal-module"],
      "docroot/modules/custom/{$name}": ["type:drupal-custom-module"],
      "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
      "docroot/profiles/custom/{$name}": ["type:drupal-custom-profile"],
      "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
      "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
      "docroot/libraries/{$name}": ["type:drupal-library"],
      "drush/Commands/{$name}": ["type:drupal-drush"]
    }
  }
}
